<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renomear Sheets/Views" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="RenomeaÃ§Ã£o em Lote de Sheets/Views" 
                           FontSize="18" 
                           FontWeight="Bold"/>
                
            </StackPanel>
            
            
        </Grid>

        <!-- CONTROLES PRINCIPAIS -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Tipo:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox Grid.Column="1" x:Name="cmbType" Height="28">
                <ComboBoxItem Content="Sheets" IsSelected="True"/>
                <ComboBoxItem Content="Views"/>
            </ComboBox>

            <Label Grid.Column="3" Content="Modo:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox Grid.Column="4" x:Name="cmbMode" Height="28">
                <ComboBoxItem Content="Find &amp; Replace" IsSelected="True"/>
                <ComboBoxItem Content="Prefix/Suffix"/>
                <ComboBoxItem Content="NumeraÃ§Ã£o"/>
            </ComboBox>

            <Label Grid.Column="6" Content="Aplicar em:" VerticalAlignment="Center" FontWeight="Bold" x:Name="lblApplyTo"/>
            <ComboBox Grid.Column="7" x:Name="cmbApplyTo" Height="28">
                <ComboBoxItem Content="Nome do Sheet" IsSelected="True"/>
                <ComboBoxItem Content="NÃºmero do Sheet"/>
                <ComboBoxItem Content="Ambos"/>
            </ComboBox>
        </Grid>

        <!-- PARÃ‚METROS FIND & REPLACE / PREFIX/SUFFIX -->
        <Grid Grid.Row="2" Margin="0,0,0,10" x:Name="gridStandardParams">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" x:Name="lblParam1" Content="Find:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Grid.Column="1" x:Name="txtParam1" Height="26" VerticalContentAlignment="Center"/>

            <Label Grid.Column="3" x:Name="lblParam2" Content="Replace:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Grid.Column="4" x:Name="txtParam2" Height="26" VerticalContentAlignment="Center"/>
        </Grid>

        <!-- PARÃ‚METROS NUMERAÃ‡ÃƒO (INTUITIVO) -->
        <Border Grid.Row="2" 
                Margin="0,0,0,10" 
                x:Name="borderNumberingParams"
                BorderBrush="#2196F3"
                BorderThickness="2"
                CornerRadius="5"
                Background="#F0F8FF"
                Padding="10"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Linha 1 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Prefixo:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" x:Name="txtPrefix" Height="26" VerticalContentAlignment="Center"/>

                    <Label Grid.Column="3" Content="Separador:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox Grid.Column="4" x:Name="cmbSeparator" Height="26">
                        <ComboBoxItem Content="_ (underscore)" IsSelected="True"/>
                        <ComboBoxItem Content="- (hÃ­fen)"/>
                        <ComboBoxItem Content="(espaÃ§o)"/>
                        <ComboBoxItem Content="(nenhum)"/>
                    </ComboBox>

                    <Label Grid.Column="6" Content="Formato:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox Grid.Column="7" x:Name="cmbNumberFormat" Height="26">
                        <ComboBoxItem Content="001, 002, 003" IsSelected="True"/>
                        <ComboBoxItem Content="01, 02, 03"/>
                        <ComboBoxItem Content="1, 2, 3"/>
                    </ComboBox>
                </Grid>

                <!-- Linha 2 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" 
                              x:Name="chkUseName" 
                              Content="âœ“ Incluir nome original" 
                              VerticalAlignment="Center"
                              FontWeight="Bold"/>

                    <Label Grid.Column="2" Content="Iniciar em:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Grid.Column="3" x:Name="txtStart" Height="26" Text="1" VerticalContentAlignment="Center"/>

                    <TextBlock Grid.Column="4" 
                               VerticalAlignment="Center" 
                               Margin="20,0,0,0"
                               Foreground="#666666"
                               FontSize="10">
                        <Run Text="ðŸ’¡ Exemplo: "/>
                        <Run Text="SP_001_Project ID" FontWeight="Bold" Foreground="#2196F3"/>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>

        <!-- FILTROS E OPÃ‡Ã•ES -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Content="Buscar:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Grid.Column="1" 
                     x:Name="txtSearch" 
                     Height="26"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"/>
            
            <CheckBox Grid.Column="2" 
                      x:Name="chkRegex" 
                      Content="ðŸ”¤ Usar Regex" 
                      VerticalAlignment="Center"
                      FontSize="11"
                      Visibility="Visible"/>
        </Grid>

        <!-- DATAGRID -->
        <Border Grid.Row="4" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                Background="White">
            <DataGrid x:Name="dgItems" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      AlternatingRowBackground="#F9F9F9"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Extended"
                      RowHeight="30"
                      FontSize="11">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="âœ“" 
                                          Binding="{Binding Apply, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          Width="40">
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                    </DataGridCheckBoxColumn>
                    
                    <DataGridTextColumn Header="Tipo" 
                                      Binding="{Binding ElementType}" 
                                      IsReadOnly="True" 
                                      Width="60">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="NÃºmero" 
                                      Binding="{Binding Number}" 
                                      IsReadOnly="True" 
                                      Width="90">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="ðŸ“„ Sheet Name" 
                                      Binding="{Binding OriginalName}" 
                                      IsReadOnly="True" 
                                      Width="*"
                                      MinWidth="200">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="âœï¸ New Nome/NÃºmero" 
                                      Binding="{Binding NewName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      Width="*"
                                      MinWidth="200">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="5,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Status" 
                                      Binding="{Binding Status}" 
                                      IsReadOnly="True" 
                                      Width="140">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- CONTADOR E AÃ‡Ã•ES RÃPIDAS -->
        <Grid Grid.Row="5" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="btnSelectAll" 
                        Content="âœ“ " 
                        Width="30" 
                        Height="28"
                        Margin="0,0,5,0"/>
                <Button x:Name="btnDeselectAll" 
                        Content="âœ— " 
                        Width="30" 
                        Height="28"
                        Margin="0,0,5,0"/>
                <TextBlock x:Name="txtCounter"
                       Text="0 de 0 selecionados" 
                       VerticalAlignment="Center"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#1976D2"/>
            </StackPanel>
        </Grid>

        <!-- BOTÃ•ES PRINCIPAIS -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Foreground="#666666" 
                       FontSize="11">
                <Run Text="ðŸ’¡ Use "/>
                <Run Text="Preview " FontWeight="Bold"/>
                <Run Text=" para visualizar antes de aplicar"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnUndo" 
                        Content="â†¶ Desfazer" 
                        Width="110" 
                        Height="36"
                        Margin="0,0,8,0"
                        Style="{StaticResource WarningButton}"/>
                        
                <Button x:Name="btnPreview" 
                        Content="ðŸ‘ Preview" 
                        Width="110" 
                        Height="36"
                        Margin="0,0,8,0"
                        Style="{StaticResource SecondaryButton}"/>
                        
                <Button x:Name="btnApply" 
                        Content="âœ“ Aplicar" 
                        Width="110" 
                        Height="36"
                        Margin="0,0,8,0"
                        Style="{StaticResource PrimaryButton}"/>
                        
                <Button x:Name="btnClose" 
                        Content="âœ— Fechar" 
                        Width="100" 
                        Height="36"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
