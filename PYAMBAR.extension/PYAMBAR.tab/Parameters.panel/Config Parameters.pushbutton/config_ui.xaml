<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurar Parametros - v3.1"
        Height="800"
        Width="1150"
        MinHeight="700"
        MinWidth="900"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SaveButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClearButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF5722"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E64A19"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                Padding="15,10"
                CornerRadius="6"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.15"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock FontSize="18"
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           Text="Configuracao de Parametros"/>
                <TextBlock FontSize="11"
                           Foreground="#4CAF50"
                           FontWeight="SemiBold"
                           Margin="0,5,0,0"
                           Text="Mostrando apenas Parametros de Projeto"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#2196F3"
                BorderThickness="2"
                CornerRadius="5"
                Margin="0,0,0,10"
                Padding="3">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.12"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                          FontSize="13"
                          VerticalAlignment="Center"
                          Margin="10,0,6,0"
                          Text="Buscar:"/>

                <TextBox x:Name="search_box"
                        Grid.Column="1"
                        FontSize="13"
                        Padding="4,8"
                        BorderThickness="0"
                        Background="Transparent"
                        VerticalAlignment="Center"
                        Foreground="#BDBDBD"
                        Text="Digite para buscar parametros..."/>

                <Button x:Name="btn_clear_search"
                       Grid.Column="2"
                       Width="28"
                       Height="28"
                       Margin="3"
                       Background="Transparent"
                       BorderThickness="0"
                       FontSize="14"
                       Foreground="#757575"
                       Cursor="Hand"
                       ToolTip="Limpar busca"
                       Content="X"/>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Background="White"
                Padding="12"
                CornerRadius="5"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.12"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btn_select_all"
                        Width="145"
                        Height="34"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Content="Selecionar Todos"/>
                <Button x:Name="btn_clear"
                        Width="145"
                        Height="34"
                        Margin="0,0,8,0"
                        Style="{StaticResource ClearButton}"
                        Content="Limpar Selecao"/>
                <Button x:Name="btn_restore"
                        Width="145"
                        Height="34"
                        Style="{StaticResource ModernButton}"
                        Content="Restaurar Padrao"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="6">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#1976D2"
                                Padding="12,8">
                            <TextBlock FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Text="Parametros disponiveis"/>
                        </Border>

                        <ScrollViewer Grid.Row="1"
                                     x:Name="scroll_viewer"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled">
                            <ListBox x:Name="parameters_listbox"
                                    Background="White"
                                    BorderThickness="0"
                                    SelectionMode="Multiple"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#F0F0F0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"
                                                  FontSize="13"
                                                  FontFamily="Segoe UI"
                                                  TextOptions.TextFormattingMode="Display"
                                                  TextOptions.TextRenderingMode="ClearType"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.ContainerStyle>
                                            <Style TargetType="GroupItem">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="GroupItem">
                                                            <Expander IsExpanded="True"
                                                                     Background="#F8F9FA"
                                                                     BorderBrush="#E0E0E0"
                                                                     BorderThickness="0,1,0,0"
                                                                     Margin="0,3,0,0">
                                                                <Expander.Header>
                                                                    <Border Background="#1976D2"
                                                                            Padding="6,4"
                                                                            CornerRadius="3"
                                                                            Margin="2">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding Name}"
                                                                                      FontWeight="Bold"
                                                                                      FontSize="11"
                                                                                      Foreground="White"/>
                                                                            <Border Background="White"
                                                                                   CornerRadius="7"
                                                                                   Padding="5,1"
                                                                                   Margin="5,0,0,0">
                                                                                <TextBlock Text="{Binding ItemCount}"
                                                                                          FontSize="9"
                                                                                          FontWeight="Bold"
                                                                                          Foreground="#1976D2"/>
                                                                            </Border>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </Expander.Header>
                                                                <ItemsPresenter Margin="0,2,0,3"/>
                                                            </Expander>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </GroupStyle.ContainerStyle>
                                    </GroupStyle>
                                </ListBox.GroupStyle>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <Border Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="#4CAF50"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="13"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          Text="Parametros selecionados"/>
                                <Border Background="White"
                                       CornerRadius="10"
                                       Padding="8,2"
                                       Margin="10,0,0,0">
                                    <TextBlock x:Name="selected_count"
                                              Text="0"
                                              FontSize="11"
                                              FontWeight="Bold"
                                              Foreground="#4CAF50"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <ListBox x:Name="selected_listbox"
                                Grid.Row="1"
                                Background="White"
                                BorderThickness="0"
                                Padding="8"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="#E0E0E0"
                                                       BorderThickness="0,0,0,1"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                              FontSize="13"
                                              FontFamily="Segoe UI"
                                              Foreground="#2E7D32"
                                              TextOptions.TextFormattingMode="Display"
                                              TextOptions.TextRenderingMode="ClearType"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="4"
                Background="White"
                Padding="15"
                CornerRadius="6"
                Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.12"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="btn_save"
                        Width="170"
                        Height="40"
                        FontWeight="Bold"
                        FontSize="13"
                        Margin="0,0,10,0"
                        Style="{StaticResource SaveButton}"
                        Content="Salvar Configuracao"/>

                <Button x:Name="btn_cancel"
                        Width="95"
                        Height="40"
                        FontSize="13"
                        Style="{StaticResource ModernButton}"
                        Background="#757575"
                        Content="Cancelar"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
