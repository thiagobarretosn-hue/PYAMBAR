<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RevitSheet Pro v3.0" 
        Height="850" 
        Width="1400"
        MinHeight="600"
        MinWidth="900"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Modern color scheme -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="AccentColor" Color="#03A9F4"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#37474F"/>
        <SolidColorBrush x:Key="ReadOnlyColor" Color="#F5F5F5"/>
        
        <!-- DataGrid Styles -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            
            <!-- Enable virtualization for performance -->
            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="EnableColumnVirtualization" Value="True"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="True"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        </Style>
        
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource HeaderBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="BorderBrush" Value="#263238"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
        
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Background" Value="#FFEBEE"/>
                    <Setter Property="ToolTip" 
                           Value="{Binding RelativeSource={RelativeSource Self},
                                  Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource SuccessColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="ðŸ“Š" FontSize="24" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="RevitSheet Pro" FontSize="20" FontWeight="Light" 
                             Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" x:Name="scheduleNameText" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         FontSize="16" Foreground="White" FontWeight="Medium"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock x:Name="elementCountText" Text="0 elements" 
                             Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock x:Name="fieldCountText" Text="0 fields" 
                             Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Toolbar -->
        <ToolBarTray Grid.Row="1" Background="White">
            <ToolBar Background="White" Height="45">
                <!-- File Operations -->
                <Button x:Name="btnExportCsv" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“¤" Margin="0,0,5,0"/>
                        <TextBlock Text="Export CSV"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="btnImportCsv" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“¥" Margin="0,0,5,0"/>
                        <TextBlock Text="Import CSV"/>
                    </StackPanel>
                </Button>
                
                <!-- Excel button REMOVED as requested -->
                
                <Separator/>
                
                <!-- Edit Operations -->
                <Button x:Name="btnUndo" Style="{StaticResource ModernButton}" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â†¶" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Undo"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="btnRedo" Style="{StaticResource ModernButton}" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â†·" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Redo"/>
                    </StackPanel>
                </Button>
                
                <Separator/>
                
                <!-- Data Operations -->
                <Button x:Name="btnFindReplace" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”" Margin="0,0,5,0"/>
                        <TextBlock Text="Find &amp; Replace"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="btnFillEmpty" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœï¸" Margin="0,0,5,0"/>
                        <TextBlock Text="Fill Empty"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="btnFillColumn" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“" Margin="0,0,5,0"/>
                        <TextBlock Text="Fill Column"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="btnClearSelected" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,5,0"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnResetAll" Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â†©" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Reset All"/>
                    </StackPanel>
                </Button>

                <Separator/>
                
                <!-- Revit Operations -->
                <Button x:Name="btnPreview" Style="{StaticResource PrimaryButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘ï¸" Margin="0,0,5,0"/>
                        <TextBlock Text="Preview"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="btnApply" Style="{StaticResource SuccessButton}" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ…" Margin="0,0,5,0"/>
                        <TextBlock Text="Apply to Revit"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        
        <!-- Info Bar for Read-Only Fields -->
        <Border Grid.Row="2" Background="#FFF3E0" BorderBrush="#FFB74D" 
                BorderThickness="0,0,0,1" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock FontSize="12" Foreground="#E65100">
                    <Run Text="Campos com fundo cinza ("/>
                    <Run Text="ðŸ”’" FontWeight="Bold"/>
                    <Run Text=") sÃ£o somente leitura e nÃ£o podem ser modificados (parÃ¢metros de instÃ¢ncia ou calculados)."/>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Filter Bar -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Margin="0,0,0,5">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ” Quick Filter:" 
                         VerticalAlignment="Center" Margin="15,0,10,0"
                         FontSize="13"/>
                
                <TextBox Grid.Column="1" x:Name="txtQuickFilter" 
                        VerticalAlignment="Center" Margin="0,0,10,0"
                        Padding="8,5" FontSize="13"/>
                
                <TextBlock Grid.Column="2" Text="Column:" 
                         VerticalAlignment="Center" Margin="10,0,10,0"
                         FontSize="13"/>
                
                <ComboBox Grid.Column="3" x:Name="cmbFilterColumn" 
                         VerticalAlignment="Center" Height="28"
                         FontSize="13"/>
                
                <CheckBox Grid.Column="5" x:Name="chkShowModifiedOnly" 
                         Content="Show Modified Only" 
                         VerticalAlignment="Center" Margin="0,0,15,0"
                         FontSize="13"/>
            </Grid>
        </Border>
        
        <!-- Main DataGrid with proper virtualization -->
        <Grid Grid.Row="4">
            <DataGrid x:Name="mainDataGrid"
                     Style="{StaticResource ModernDataGridStyle}"
                     ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                     RowStyle="{StaticResource DataGridRowStyle}"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     SelectionMode="Extended"
                     SelectionUnit="CellOrRowHeader"
                     ClipboardCopyMode="IncludeHeader"
                     FrozenColumnCount="0"
                     RowHeaderWidth="60">
                
                <!-- Columns will be added programmatically with read-only styling -->
            </DataGrid>
            
            <!-- Loading Overlay -->
            <Border x:Name="loadingOverlay" 
                   Background="#E6FFFFFF"
                   Visibility="Collapsed">
                <Grid>
                    <Border Background="White" 
                           CornerRadius="8"
                           Width="300" Height="120"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" 
                                           ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar x:Name="loadingProgress" 
                                       Width="200" Height="4"
                                       IsIndeterminate="True"/>
                            <TextBlock x:Name="loadingText" 
                                     Text="Loading data..."
                                     HorizontalAlignment="Center"
                                     Margin="0,15,0,0" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Info Panel -->
        <Border Grid.Row="5" Background="White" BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <Grid Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                          VerticalAlignment="Center" Margin="15,0">
                    <TextBlock x:Name="txtUndoInfo" Text="History: 0 undo | 0 redo" 
                             FontSize="12" Foreground="#757575"/>
                    <TextBlock Text=" | Ctrl+C/V: Copy/Paste | Ctrl+Z/Y: Undo/Redo | Ctrl+F: Find | Ctrl+S: Export | Del: Clear"
                             FontSize="12" Foreground="#9E9E9E" Margin="10,0,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" x:Name="txtModificationCount" 
                         Text="0 modifications pending" 
                         VerticalAlignment="Center" Margin="0,0,20,0"
                         FontSize="13" FontWeight="Medium" Foreground="{StaticResource WarningColor}"/>
                
                <TextBlock Grid.Column="2" x:Name="txtSelectionInfo" 
                         Text="No selection" 
                         VerticalAlignment="Center" Margin="0,0,15,0"
                         FontSize="12" Foreground="#757575"/>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="6" Background="{StaticResource HeaderBackground}" Height="28">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Ready" Foreground="White" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="performanceText" Text="Performance: Optimal" 
                             Foreground="#4CAF50" FontSize="12" Margin="0,0,15,0"/>
                    <TextBlock Text="v3.0" Foreground="White" FontSize="11"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
