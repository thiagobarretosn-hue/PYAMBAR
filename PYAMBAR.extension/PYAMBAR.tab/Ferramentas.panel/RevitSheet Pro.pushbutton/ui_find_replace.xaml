<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find and Replace" 
        Height="380" 
        Width="450"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Find what:" FontWeight="SemiBold" FontSize="13"/>
        <TextBox Grid.Row="1" x:Name="txtFind" Margin="0,0,0,15"
                 Height="28" Padding="6,4" FontSize="13"/>
        
        <Label Grid.Row="2" Content="Replace with:" FontWeight="SemiBold" FontSize="13"/>
        <TextBox Grid.Row="3" x:Name="txtReplace" Margin="0,0,0,15"
                 Height="28" Padding="6,4" FontSize="13"/>
        
        <Label Grid.Row="4" Content="Search in:" FontWeight="SemiBold" FontSize="13"/>
        <ComboBox Grid.Row="5" x:Name="cmbColumn" Margin="0,0,0,15"
                  Height="30" FontSize="13"/>
        
        <CheckBox Grid.Row="6" x:Name="chkCaseSensitive"
                  Content="Case sensitive" Margin="0,5,0,8" FontSize="13"/>

        <CheckBox Grid.Row="7" x:Name="chkUseRegex"
                  Content="Use regular expressions" Margin="0,0,0,15" FontSize="13"/>
        
        <StackPanel Grid.Row="8" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnReplace" Content="Replace All"
                    Width="110" Height="34" Margin="0,0,10,0"
                    Background="#2196F3" Foreground="White"
                    FontWeight="Medium" FontSize="13"
                    IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Cancel"
                    Width="90" Height="34"
                    FontSize="13"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
